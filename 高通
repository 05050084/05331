R= 16000;
C = 1.0e-6;
f= 1:2:1000000;
res = j*2*pi*f*R*C ./ (1+ j * 2 * pi * f * R * C );
amp = abs(res);
phase = angle(res); 
subplot(211);
loglog(f,amp);
title('Amplitude Response');
xlabel('Frequency(Hz)');
ylabel('Output/input Ratio');
grid on;
subplot(212);
semilogx(f,phase);
title('Phase Response');
xlabel('frequency(Hz)');
ylabel('Output/input Ratio');
grid on;
